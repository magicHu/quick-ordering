<div class="page-header">
  <h1>用户设置</h1>
</div>

<%= simple_form_for current_user, :url => 'update_setting', :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :telephone %>
  <%= f.input :weixin_name %>
  <%= f.association :company %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
