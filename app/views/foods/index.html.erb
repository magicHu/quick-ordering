<%- model_class = Food -%>
<div class="page-header">
  <h1><%= link_to @restaurant.name, @restaurant %> <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_restaurant_food_path(@restaurant),
                :class => 'btn btn-primary' %>

  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= link_to food.id, restaurant_food_path(@restaurant, food) %></td>
        <td><%= food.name %></td>
        <td><%= food.desc %></td>
        <td><%= food.price %></td>
        <td><%= food.category.name if food.category %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_food_path(@restaurant, food), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_food_path(@restaurant, food),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
