<%= simple_form_for [@restaurant, @food], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :desc, :input_html => { :rows => 6 } %>
  <%= f.input :price %>
  <%= f.association :category %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_foods_path(@restaurant), :class => 'btn' %>
  </div>
<% end %>
