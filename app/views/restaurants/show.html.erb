<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%= @restaurant.name %>
    <small>
      <%= @restaurant.address %>
      <%= link_to '下单', new_restaurant_order_path(@restaurant), :class => 'btn btn-large btn-danger' %>
      <%= link_to '菜单管理', restaurant_foods_path(@restaurant), :class => 'btn btn-info' %>
      <%= link_to '分类管理', restaurant_categories_path(@restaurant), :class => 'btn btn-info' %>
    </small>

  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @restaurant.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @restaurant.address %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
