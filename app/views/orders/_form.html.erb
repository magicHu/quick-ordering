<%= simple_form_for [@restaurant, @order], :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :food_ids, collection: @restaurant.foods, as: :select %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @restaurant, :class => 'btn' %>
  </div>
<% end %>
