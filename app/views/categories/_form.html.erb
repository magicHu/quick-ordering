<%= simple_form_for [@restaurant, @category], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_categories_path(@restaurant), :class => 'btn' %>
  </div>
<% end %>
